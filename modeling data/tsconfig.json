{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "./",
        "./*"
      ]
    },
    "resolveJsonModule": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ESNext",
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}